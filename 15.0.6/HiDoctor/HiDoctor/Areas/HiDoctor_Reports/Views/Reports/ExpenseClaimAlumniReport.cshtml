            success: function (response) {
                var jsUser = eval('(' + response + ')');
                $("#userName").html(jsUser[0].Employee_Name +"(" +jsUser[0].User_Name +")")
                $("#JoiningDate").html(jsUser[0].Date_of_Joining)
                $("#ResignationDate").html(jsUser[0].Resignation_Date)
     
