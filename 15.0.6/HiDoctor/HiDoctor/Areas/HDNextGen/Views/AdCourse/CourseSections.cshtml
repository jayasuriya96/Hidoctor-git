    .sub-wrapper {
        display: none;
    }
    #dvCourseSections
    {
        font-size:16px;
    }    
    #courseSections {
        background-color:#E9E9E9;
        font-family: 'tahoma', 'fantasy', 'arial', 'times new roman' !important;
