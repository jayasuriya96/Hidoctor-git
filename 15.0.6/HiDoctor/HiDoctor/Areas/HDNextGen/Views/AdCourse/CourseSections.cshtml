        font-family: 'tahoma', 'fantasy', 'arial', 'times new roman' !important;
    }     
    #courseSectionsTable td{
        font-family: 'tahoma', 'fantasy', 'arial', 'times new roman' !important;
    }
    #courseSectionsTable td span {
        font-family: 'tahoma', 'fantasy', 'arial', 'times new roman' !important;
        font-size:16px;
    }     
    #dvCourseSectionsStatus span,#printCertificate a, #dvCourseSections {
        font-family: 'tahoma', 'fantasy', 'arial', 'times new roman' !important;
        font-size:16px;
    }
