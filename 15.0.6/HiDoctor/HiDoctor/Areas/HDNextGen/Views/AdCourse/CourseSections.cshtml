<div id="courseSections">
    <div class="dvCourseName">
        <div class="dvCourseHeader"><span class="bold">Course Name: </span>Loading...</div>
    </div>
    <div class="dvCourseSections">
        Sections
    </div>
    <div class="dvCourseSectionTable">
        <div class="table-responsive">
            <table id="courseSectionsTable" class="table">
                <tr>
                    <th>SNo.</th>
                    <th>Section Name</th>
                    <th>No of assets</th>
                    <th>Pass %</th>
                    <th style="width: 100px">Test Status</th>
                    <th>Action</th>
                    <th>&nbsp;</th>
                    <th style="text-align: center;">&nbsp;&nbsp;Assets</th>
                </tr>
            </table>
        </div>
    </div>
    <div class="dvCourseSectionsStatus">
        <span>Test Status: </span>
        <span id="courseStatus">Loading...</span>
    </div>
    <div class="dvCourseSectionsStatus" style="height: 100px;">
        <span id="courseStatusDone" style="float: right;"><a href="#" onclick="courseSections.redirectToAdCourseLandingPage();" class="a-btn">Done</a></span>
        <span id="printCertificate" style="float: right;"><a href="#print" class="a-btn">Print Certificate</a></span>
    </div>
</div>


<script lang="ja" type="text/javascript">
    var courseId = "@ViewBag.Course_Id"
    var publishId = "@ViewBag.Publish_Id";
    clientLogoURL_g = "http://clientlogo.blob.core.windows.net/logo/hdtesta1.kangle.me.jpg";
    $(document).ready(function () {
        // $(function () {
        courseSections.courseId = courseId;
        courseSections.publishId = publishId;

        $("#printCertificate").hide();
        courseSections.init(HDNG_gUserId, HDNG_gCompanyId, courseSections.courseId, courseSections.publishId);
        $('#dvAjaxLoad').hide();
        debugger;
    });
</script>
