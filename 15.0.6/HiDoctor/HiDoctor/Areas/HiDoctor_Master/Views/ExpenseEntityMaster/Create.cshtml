@model HiDoctor_Master.Models.ExpenseEntityMasterModel

@{
    Layout = null;
}

<link href="~/Content/Bootstrap/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/Bootstrap/bootstrap.js"></script>
<style>
    .selectboxWidth {
        width: 99%;
    }
</style>

<div>
    <table>
        <tr>
            <td>
                <label class="control-label">Entity Name:</label>
            </td>
            <td style="margin-top: 10px">
                <input type="hidden" name="expentity" id="expentitycodeval" />
                <input type="text" class="input-large" id="txtentityname" maxlength="50" />
            </td>
        </tr>
        <tr>
            <td>
                <label class="control-label">Effective From:</label>
            </td>
            <td style="margin-top: 10px">
                <input type="text" id="txtFromDate" class='datepicker input-large' />
            </td>
        </tr>
        <tr>
            <td>
                <label class="control-label">Effective To:</label>
            </td>
            <td style="margin-top: 10px">
                <input type="text" id="txtToDate" class='datepicker input-large' />
            </td>
        </tr>
        <tr></tr>
        <tr>
            <td style="margin-top: 10px">
                <input type="button" name="Save" value="Save" id="btnsave" class="btn btn-primary" onclick="fnSaveExpenseEntityMaster();" />
                <input type="hidden" name="Update" value="I" id="hdnMode" />
            </td>
            <td>
                <input type="button" name="Cancel" value="Cancel" id="btncancel" class="btn btn-primary" onclick="fnClear();" />
            </td>
        </tr>
    </table>
    <br />
    @Html.ActionLink("Download Expense Entity Master details", "PutExpenseEntityMasterIntoExcel",new {})
    <br />
    <div id="divExpEntity"></div>
</div>


<script type="text/javascript" src="../../Areas/HiDoctor/Scripts/HD/common.js?v=@HiDoctor.BuildNumber.BuildNo"></script>
<script src="../../Areas/HiDoctor_Master/Scripts/HD_Master/ExpenseEntityMaster.js?v=@HiDoctor.BuildNumber.BuildNo" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        AjaxGlobalHandler.Initiate();
        fnGetEntityMaster();
        $("#dvAjaxLoad").hide();
        $(".datepicker").datepicker({
            dateFormat: 'dd/mm/yy',
            //showButtonPanel: true
        });
        $("#divPageHeader").html('Expense Entity Master');
    });
</script>
