@{
    ViewBag.Title = "RequisitionSummary";
    Layout = null;
}


<link href="~/Content/Bootstrap/bootstrap.css" rel="stylesheet" />
<link href="~/Areas/HiDoctor_Master/Content/PurchaseRequisition.css" rel="stylesheet" />

<div></div>
<div id="dvTab" class="form-group ui-tabs ui-widget ui-widget-content ui-corner-all">
    <ul class="nav nav-pills ui-tabs-nav ui-helper-reset ui-helper-clearfix ui-widget-header ui-corner-all">
        <li class="ui-state-default ui-corner-top create" id="prmaster">
            <a href="#Tracker" data-toggle="tab"><b>Requisition Tracker</b></a>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane active" id="summrylist">
            <div id="rdbtnsmain">
                <div class="col-xs-12 clearfix" id="DateInput">
                    <div class="col-xs-1" id="GENDateInput1">
                        <label for="From Date">From Date</label>
                    </div>
                    <div class="col-xs-2"><input type="text" readonly id="fromDate" class="form-control" style="cursor:pointer;" /></div>
                    <div class="col-xs-1" id="GENDateInput2">
                        <label for="From Date">To Date</label>
                    </div>
                    <div class="col-xs-2"><input type="text" readonly id="toDate" class="form-control" style="cursor:pointer;"/></div>
                </div>
                <div class="col-xs-12 clearfix" id="UserTypechkbx">
                    <b>Select Filter Type:</b>   &nbsp;&nbsp;&nbsp;
                    <input type="radio" name="user" value="0" checked>&nbsp;<b>Self</b>
                    <input type="radio" name="user" value="1">&nbsp;<b>Team</b>
                </div>
                <div class="col-xs-12 clearfix" id="RDbtnsSelec">
                    <b>Select Requisition Type:</b>   &nbsp;&nbsp;&nbsp;
                    <input type="radio" name="type" value="0" onclick="RequisitionSummary.fnGetGrid('0');" checked>&nbsp;<b>All</b>
                    <input type="radio" name="type" value="1" onclick="RequisitionSummary.fnGetGrid('1');">&nbsp;<b>Marketing Campaign</b>
                    <input type="radio" name="type" value="2" onclick="RequisitionSummary.fnGetGrid('2');">&nbsp;<b>General</b>
                </div>

                <div class="col-xs-12 clearfix" id="btnSumbitInput">
                    <input type="button" value="GO" style="margin-left:15px;"class="btn" onclick="RequisitionSummary.fnGetAllRequisitions();" />
                </div>
            </div>
            <div class="col-xs-12 clearfix" id="MClist">
                <div class="col-xs-4"></div>
                <div class="col-xs-8" style="float:right;">
                    <div id="test1" style="padding-top:5px;font-size:14px;padding-left:300px;" class="col-xs-1">
                        <b>Filter:</b>
                    </div>
                    <div class="col-xs-7" style="float:right;">
                        <select class="form-group" id="MCList" onchange="RequisitionSummary.fnGetRequisitionsByCampaign(this.value);" style="float:right;width:100%;">
                            <option value="0">All</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group col-xs-12" id="PRtbldiv">

            </div>
        </div>
    </div>
</div>

<div id="ModalPlaceOrder" class="modal fade " role="dialog" style="display:none;overflow:hidden;">
    <div class="modal-dialog modal-lg" style="-webkit-box-shadow:none;background:none;border:0px;margin:0px;margin-left:150px;">
        <div class="modal-content" style="width:1055px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">List of Placed Order(s)</h4>
            </div>
            <div class="modal-body" id="HistoryOrdersbody" style="width:100%;height:500px;overflow: auto;">
            </div>
            <div class="modal-footer" style="padding: 5px 20px 20px;margin-top: 0px;">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>




<div id="ModalDispatch" class="modal fade " role="dialog" style="display:none;overflow:hidden;">
    <div class="modal-dialog modal-lg" style="-webkit-box-shadow:none;background:none;border:0px;margin:0px;margin-left:150px;">
        <div class="modal-content" style="width:1055px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">List of Dispatch Details</h4>
            </div>
            <div class="modal-body" id="HistoryDispatchbody" style="width:100%;height:500px;overflow: auto;">
                <div class="col-xs-12" id="details">

                </div>
                <div class="col-xs-12" id="DispatchDet">

                </div>
            </div>
            <div class="modal-footer" style="padding: 5px 20px 20px;margin-top: 0px;">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<script src="~/Areas/HiDoctor_Master/Scripts/HD_Master/RequisitionSummary.js"></script>
<script>
    $(document).ready(function () {
        AjaxGlobalHandler.Initiate();
        $('#dvAjaxLoad').hide();
        $('#dvTab').tabs();
       
    });


    $('#fromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        numberOfMonths: 1,
        maxDate: 0,
        changeMonth: true,
        changeYear: true,
    });

    $('#toDate').datepicker({
        dateFormat: 'dd/mm/yy',
        numberOfMonths: 1,
        maxDate: 0,
        changeMonth: true,
        changeYear: true,
    });
   


   
    RequisitionSummary.Init();
</script>
