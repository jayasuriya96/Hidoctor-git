@{
    Layout = "~/Views/Shared/_batchMobileLayOut.cshtml";
}
<link href="~/Areas/HiDoctor_Activity/Content/MTO.css" rel="stylesheet" />
<style>
    hr {
        margin-top: 20px;
        margin-bottom: 20px;
        border-top: black;
        border: 0;
    }
         #Initial {
        text-align: center;
        height: 50px;
        width: 50px;
        background-color: blue;
        color: #fff;
        border-radius: 50%;
        display: inline-block;
        font-size: 30px;
        right: 20px;
        position: relative;
        right: 20px;
        padding: 5px 12px;
    }
</style>

<div class="form-row" id="dvdetails">
    <div class="col-xs-12" style="padding: 0px;">
        <span onclick="CPDReports.fnBack('Details',usrcunt,SUserName);"><i style="font-size: 26px !important;" class="fa fa-arrow-circle-left"></i></span>
    </div>
    <div class="form-group col-xs-12" id="dvField" style="padding: 5px;">

        <div class="align col-xs-12" style="border-bottom:1px solid #ddd;padding:10px;">
            <div class="col-xs-2" style="margin-left: 10px;"><span id="Initial"></span></div>
            <div class="col-xs-8" style="font-size:12px;margin: 0px;">
                <label>User Name : </label>
                <span style="font-size: 12px;word-break: break-all;" id="usrname"></span></br>
                <label>Rep Code : </label>
                <span style="font-size: 12px;" id="repcode"></span></br>
                <label>Date : </label>
                <span style="font-size: 12px;" id="CPDdate"></span>
            </div>
        </div>

        <div class="col-xs-12" style="border-bottom:1px solid #ddd;padding: 0px;">
            <div class="col-xs-12">
                <div class="col-xs-1">
                    <i class="fa fa-shopping-cart" style="font-size: 20px;margin-top: 5px;"></i>
                </div>
                <div class="col-xs-8">
                    <h5 style="font-weight: bold;">Market Details</h5>
                </div>
            </div>
            <div class="col-xs-12" style="font-size:12px;margin: 0px;">
                <input id="MTOid" type="hidden" value="" />
                <div id="MarketDet"></div>
            </div>
        </div>

        <div class="col-xs-12" style="border-bottom:1px solid #ddd;padding: 0px;">
            <div class="col-xs-12">
                <div class="col-xs-1">
                    <i class="fa fa-group" style="font-size: 20px;margin-top: 5px;"></i>
                </div>
                <div class="col-xs-8">
                    <h5 style="font-weight: bold;">Product Details</h5>
                </div>
            </div>
            <div class="col-xs-12" style="font-size:12px;margin: 0px;">
                <div style="border-radius: 10px;border: 1px solid mediumslateblue;padding: 12px 10px;" class="clearfix">
                    <div id="spnProdDetails"></div>
                </div>
            </div>
        </div>

        <div class="col-xs-12" style="border-bottom:1px solid #ddd;padding: 0px;">
            <div class="col-xs-12">
                <div class="col-xs-1">
                    <i class="fa fa-shopping-bag" style="font-size: 20px;margin-top: 5px;"></i>
                </div>
                <div class="col-xs-8">
                    <h5 style="font-weight: bold;">Bright Outlets</h5>
                </div>
            </div>
            <div class="col-xs-12" style="font-size:12px;margin: 0px;">
                <div style="border-radius: 10px;border: 1px solid mediumslateblue;padding: 12px 10px;" class="clearfix">
                    <div id="spnBrightDetails"></div>
                </div>
            </div>
        </div>

        <div class="col-xs-12" style="border-bottom:1px solid #ddd;padding: 0px;">
            <div class="col-xs-12">
                <div class="col-xs-1">
                    <i class="fa fa-shopping-bag" style="font-size: 20px;margin-top: 5px;"></i>
                </div>
                <div class="col-xs-8">
                    <h5 style="font-weight: bold;">Shine Outlets</h5>
                </div>
            </div>
            <div class="col-xs-12" style="font-size:12px;margin: 0px;">
                <div style="border-radius: 10px;border: 1px solid mediumslateblue;padding: 12px 10px;" class="clearfix">
                    <div id="spnShineDetails"></div>
                </div>
            </div>
        </div>

        <div class="col-xs-12" style="border-bottom:1px solid #ddd;padding: 0px;">
            <div class="col-xs-12">
                <div class="col-xs-1">
                    <i class="fa fa-pencil" style="font-size: 20px;margin-top: 5px;"></i>
                </div>
                <div class="col-xs-8">
                    <h5 style="font-weight: bold;">General Remarks</h5>
                </div>
            </div>
            <div class="col-xs-12" style="font-size:12px;margin: 0px;border-radius: 10px;border: 1px solid mediumslateblue;padding: 12px 10px;">
                <input id="MTOid" type="hidden" value="" />
                <div id="spnRemarks"></div>
            </div>
        </div>

    </div>

</div>
<script src="~/Areas/HiDoctor_Activity/Scripts/HD/CPDReports.js?v=@DateTime.Now.Ticks"></script>
<script>
    var CompanyId = '';
    var SelUserCode = '';
    var subDomainName = '';
    var MTODate='';
    var CPD_Id='';
    var LID='';
    var SUserName='';
    var usrcunt='';
    var LoginUserCode='';
    $(document).ready(function () {
        debugger;
        CompanyId=@Html.Raw(Json.Encode(ViewBag.CompanyId));
        subDomainName=@Html.Raw(Json.Encode(ViewBag.subDomainName));
        CPD_Id=@Html.Raw(Json.Encode(ViewBag.CPD_Id));
        LID=@Html.Raw(Json.Encode(ViewBag.LID));
        SelUserCode=@Html.Raw(Json.Encode(ViewBag.SelUserCode));
        SUserName=@Html.Raw(Json.Encode(ViewBag.SelUserName));
        usrcunt=@Html.Raw(Json.Encode(ViewBag.usrcnt));
        LoginUserCode=@Html.Raw(Json.Encode(ViewBag.LoginUserCode));
        CPDReports.GetUserCPDDetails(subDomainName, CPD_Id);
    })
    function fnuserstatus()
    {
        var result='';
        $.ajax({
            type: 'POST',
            data: 'subDomainName=' + subDomainName + "&CompanyId=" + CompanyId + "&Usercode=" +LoginUserCode,
            url: '../../HiDoctor_Activity/MTO/GetUserStatus',
            async:false,
            success: function (res) {
                debugger;
                if(res == 1)
                    result = true;
                else
                    result = false;
            }
        })
        return result;
    }
</script>