@{
    Layout = null;
    ViewBag.Title = "NotificationFieldUser";
}

<style>
    .notifications {
        display: inline-block;
        list-style: none;
        margin: 11px -10px 0 0;
        padding: 0;
        vertical-align: middle;
        /*float: right;*/
    }

        .notifications > li {
            float: left;
            /*margin: 0 20px 0 0;*/
            margin: 15px 20px 10px -13px;
            position: relative;
        }

            .notifications > li .notification-icon {
                /*background: #FFF;*/
                border-radius: 50%;
                /*box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.3);*/
                display: inline-block;
                height: 30px;
                position: relative;
                width: 30px;
                text-align: center;
            }

            .notifications > li > a {
                border: none;
            }

            .notifications > li .notification-icon img {
                color: #404040;
                line-height: 32px;
                vertical-align: middle;
                font-size: 19px;
            }

            .notifications > li .notification-icon .badge {
                background: #FF1744;
                color: #FFF;
                font-size: 12px;
                font-weight: normal;
                height: 19px;
                padding: 3px 5px 3px 5px;
                position: absolute;
                right: -15px;
                top: -11px;
                border-radius: 100%;
                display: inline-block;
                min-width: 19px;
                line-height: 1;
                text-align: center;
                white-space: nowrap;
                vertical-align: middle;
            }
</style>

<section class="dash-content  form-container" id="divMenu_left" style="margin-left: 24%;">

    <ul class="notifications">
        <li>
            @*<div class="cls-dv-separator"></div>*@
        </li>
        <li id="lstInwardIcon">
            <a href="#" class="notification-icon inward-pop" data-toggle="dropdown" title="Inward">
                @*   <i class="fa fa-envelope"></i>*@
                <img src="~/Content/images/Home/ic_inward.png" style="width: 28px; height: 28px;" />
                <span class="badge" id="spnInward">0</span>
            </a>

        </li>
        </br>
                <li>
                    <a href="#" class="notification-icon messages-pop" data-toggle="dropdown" title="Message">
                        @*   <i class="fa fa-envelope"></i>*@
                        <img src="~/Content/images/Home/ic_message.png" />
                        <span class="badge" id="spnMsg">0</span>
                    </a>

                </li>
        </br>
                <li>
                    <a href="#" class="notification-icon notify-pop" data-toggle="dropdown" title="Notification">
                        @* <i class="fa fa-bell"></i>*@<img src="~/Content/images/Home/ic_Alert.png" />
                        <span class="badge" id="spnNotify">0</span>
                    </a>
                </li>
        </br>
                <li>
                    @*<div class="cls-dv-separator"></div>*@
                </li>
        <li>
            <a href="#" class="notification-icon birthday-pop" data-toggle="dropdown" title="Birthday">
                @*   <i class="fa fa-gift"></i>*@<img src="~/Content/images/Home/ic_birthday.png" />
                <span class="badge" id="spnBirthday">0</span>
            </a>
        </li>
        </br>
                <li>
                    <a href="#" class="notification-icon anniversary-pop" data-toggle="dropdown" title="Anniversary">
                        @* <i class="fa fa-calendar-o"></i>*@
                        <img src="~/Content/images/Home/ic_anniversary.png" />
                        <span class="badge" id="spnAnniversary">0</span>
                    </a>
                </li>
        </br>
                <li>
                    <a href="#" class="notification-icon holiday-pop" data-toggle="dropdown" title="Holiday">
                        @* <i class="fa fa-calendar-o"></i>*@
                        <img src="~/Content/images/Home/ic_holiday.png" width="26px" height="27px" />
                        <span class="badge" id="spnHoliday">0</span>
                    </a>
                </li>
        </br>
    </ul>
</section>

<div class="modal" id="dvMoreInfoModal" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-label="Close" data-dismiss="modal" class="close" type="button" onclick="HideModalPopup('dvMoreInfoModal');"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title clsModalTitle">Modal Header</h4>
            </div>
            <div class="modal-body">
                <div class="col-lg-12 cls-padding-none" id="dvInfoContent">
                </div>
            </div>
        </div>
    </div>

</div>

