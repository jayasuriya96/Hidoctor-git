<script>
    $(document).ready(function () {
        $("#dvMsgError").html('');
        $("#dvMsgSuccess").html('');
        var ErrCode;
        ErrCode = @Html.Raw(Json.Encode(ViewBag.Result));
        if(ErrCode.split(':')[0] == "ERROR"){
            $("#dvMsgSuccess").hide();
            parent.document.getElementById('dvRedirect').style.display='none';
            $("#dvMsgError").html(ErrCode.split(':')[1]);
        }
        else{
            parent.document.getElementById('dvRedirect').style.display='show';
            parent.document.getElementById('dvRedirect').style.display='';
            $("#dvMsgError").hide();
            $("#dvMsgSuccess").html("Leave Balance uploaded successfully.Please click on the Go to Batch processing screen link to view the status of the upload");
