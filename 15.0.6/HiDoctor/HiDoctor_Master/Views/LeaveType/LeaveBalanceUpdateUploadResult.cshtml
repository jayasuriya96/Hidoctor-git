    #dvMsgSuccess {
        font-size: 14px;
        color: green;
        background-color: #C0F2D8;
        border: 1px solid green;
    }

    #dvMsgError {
        font-size: 14px;
        color: red;
        border: 1px solid red;
    }

    .freshwidget-theme {
        display: none;
    }
