@model MVCModels.ProjectMasterModel

@{
    Layout = null;
}

<link href="~/Content/Bootstrap/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/Bootstrap/bootstrap.js" type="text/javascript"></script>

<div class="col-lg-11  form-group">
    <div class="col-lg-7 form-group remove-left-padding">
        <div class="col-lg-2 form-group">
            <label>Project:</label>
        </div>
        <div class="col-lg-4 form-group">
            <input type="hidden" name="ProjectCode" id="hdnProjectcodeval" />
            <input type="text" id="txtprojectName" class="form-control" maxlength="100" />
        </div>
    </div>

    <div class="col-lg-7 form-group remove-left-padding">
        <div class="col-lg-2 form-group">
            <label>Project Lead:</label>
        </div>
        <div class="col-lg-4 form-group">
            <input type="hidden" name="ProjectLead" id="hdnProjectLeadval" />
            <select class="selectboxWidth form-control" id="ddlprojectLead" />
        </div>
    </div>

    <div class="col-lg-7 form-group remove-left-padding">
        <div class="col-lg-2 form-group">
            <label>Client:</label>
        </div>
        <div class="col-lg-4 form-group">
            <input type="hidden" name="ClientCode" id="hdnClientCodeval" />
            <select class="selectboxWidth form-control" id="ddlClient" />
        </div>
    </div>

    <div class="col-lg-7 form-group remove-left-padding">
        <div class="col-lg-2 form-group">
            <label>Domain:</label>
        </div>
        <div class="col-lg-4 form-group">
            <input type="hidden" name="DomainCode" id="hdnDomainCodeval" />
            <select class="selectboxWidth form-control" id="ddlDomain" />
        </div>
    </div>

    <div class="col-lg-7 form-group remove-left-padding">
        <div class="col-lg-2 form-group">
            <label>Start Date:</label>
        </div>
        <div class="col-lg-4 form-group">
            <input type="text" id="txtFromDate" class='datepicker form-control' />
        </div>
    </div>

    <div class="col-lg-7 form-group remove-left-padding">
        <div class="col-lg-2 form-group">
            <label>End Date:</label>
        </div>
        <div class="col-lg-4 form-group">
            <input type="text" id="txtEndDate" class='datepicker form-control' />
        </div>
    </div>

    <div class="col-lg-7 form-group remove-left-padding">
        <div class="col-lg-2 form-group" style="vertical-align: middle">
            <label>Remarks:</label>
        </div>
        <div class="col-lg-4 form-group">
            <textarea id="txtremarks" cols="20" rows="5" class='form-control'></textarea>
        </div>
    </div>

    <div class="col-lg-7 form-group remove-left-padding">
        <div class="col-lg-2 form-group">
            <input type="button" name="Save" value="Save" id="btnsave" onclick="fnSubmit()" class="btn btn-primary" />
            <input type="hidden" name="Update" value="I" id="hdnMode" />
        </div>
        <div class="col-lg-4 form-group">
            <input type="button" name="Cancel" value="Cancel" id="btncancel" onclick="fnClearAll()" class="btn btn-primary" />
        </div>
    </div>
    <div style="clear: both;"></div>
    <br />
    @Html.ActionLink("Download Project Master details", "PutProjectMasterIntoExcel",new {})
    <br />
    <div id="divProjectMaster"></div>
</div>

<script type="text/javascript" src="../../Areas/HiDoctor/Scripts/HD/common.js?v=@HiDoctor.BuildNumber.BuildNo"></script>
<script src="../../Areas/HiDoctor_Master/Scripts/HD_Master/ProjectMaster.js?v=@HiDoctor.BuildNumber.BuildNo" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        AjaxGlobalHandler.Initiate();
        fnGetProjectLead();
        fnGetClient();
        fnGetDomain();
        fnGetProjectDeatils();
        $("#dvAjaxLoad").hide();
        $(".datepicker").datepicker({
            dateFormat: 'dd/mm/yy',
        });
        $("#divPageHeader").html('Project Master');
    });
</script>

<style>
    .selectboxWidth {
        width: 99%;
    }
</style>
