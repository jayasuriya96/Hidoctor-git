                <div id="dvCourseName" class="col-lg-12"></div>
                <div id="dvCourseDesc" class="col-lg-12"></div>
            </div>
            <div class="col-md-3" id="dvSurImage">
                <img id="dvImgSurImg" class="thumbnail img-responsive" />
            </div>
