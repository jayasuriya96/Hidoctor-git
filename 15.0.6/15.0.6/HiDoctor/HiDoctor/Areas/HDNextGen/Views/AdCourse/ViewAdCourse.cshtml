                <div class="col-lg-12" id="dvResInfo"></div>
            </div>
            <div class="col-lg-6" id="dvViewPagination" style="display: none;">
                <div class="clsDvPage col-lg-12">
                    <p class="bootPage"></p>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="col-lg-12" id="dvPubInfo"></div>
    <div id="dvCoursePubContent" style="display: none;" class="clearfix">
        <div class="col-lg-12 clearfix" id="dvViewPubCourse"></div>
    </div>

    <div class="clearfix"></div>
</div>

<script src="../../Areas/HDNextGen/Scripts/AdCourse/CreateQuestion.js?" type="text/javascript"></script>

<script type="text/javascript">

    var viewCourseID_g = "";
    var contentID_g="";
    var viewMode_g = "";
    var pageSelection_g="";
    var currrentDate_g="";
    
    $(document).ready(function () {
        AjaxGlobalHandler.Initiate();
    });
    $("#divPageHeader").html("Preview Course"); 
    var param =  @Html.Raw(Json.Encode(ViewBag.Course_ID));
    contentID_g= @Html.Raw(Json.Encode(ViewBag.Content_ID));
    cname_g= @Html.Raw(Json.Encode(ViewBag.Cname));
    pageSelection_g =@Html.Raw(Json.Encode(ViewBag.PageSelection));
    currrentDate_g= @Html.Raw(Json.Encode(ViewBag.CurrrentDate)); 
    var DATE_FORMAT = "dd/mm/yyyy";
    
    QUESTIONS.fnInitializeQuestionPerPage();
    viewCourseID_g = param.split('~')[0];
    viewMode_g =  @Html.Raw(Json.Encode(ViewBag.MODE));
    var viewPageNo = "@Resources.AdCourse.Course_View_Page_No";
    var viewNoOfQuest = "@Resources.AdCourse.Course_View_Total_No_Of_Quest";
    var viewAnswered = "@Resources.AdCourse.Course_View_Quest_Answered";
   
    var userSubmit = "@Resources.AdCourse.Course_View_Submit";
    var userPublish = "@Resources.AdCourse.Course_View_Publish";
    var surResMandaText = "@Resources.AdCourse.Course_Response_Mand_Valid";
    var ThankYouMsg = "@Resources.AdCourse.Course_Response_Thank_Msg";
    
    $('#btnSPubSubmit').html("@Resources.AdCourse.Course_Pub_Save");
    $('#btnSPubPreview').val("@Resources.AdCourse.Course_Pub_Preview");
    $('#btnSurPublish').val("@Resources.AdCourse.Course_Pub_Publish_button");
    var surPubEffecFromEmpty = "@Resources.AdCourse.Course_Pub_EffecFrom_Empty";
    var surPubEffecToEmpty = "@Resources.AdCourse.Course_Pub_EffecTo_Empty";
    var Course_Resp_Quest_Speci_Msg= "@Resources.AdCourse.Course_Resp_Quest_Speci_Msg";

    var Course_Res_Save_Next ="@Resources.AdCourse.Course_Res_Save_Next";
    
    $('#dvPageNo').html(viewPageNo);
    
    QUESTIONS.fnGetCourseView(viewCourseID_g,contentID_g,viewPageNo_g,'');   
    $('#btnBack').html('<i class="fa fa-arrow-circle-left"></i> Back to Section Home');
    $('#btnBack').click(function () {    
        var courseDet = viewCourseID_g + "^" + encodeURIComponent(cname_g);
        $("#main").load('/HDNextGen/AdCourse/SectionHome/'+ courseDet);        
    });
</script>
