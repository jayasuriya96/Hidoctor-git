<script>


    var subDomainName=@Html.Raw(Json.Encode(ViewBag.subDomainName));
    var RegionCode=@Html.Raw(Json.Encode(ViewBag.RegionCode));
    var Company_Code=@Html.Raw(Json.Encode(ViewBag.CompanyCode));
    var UserCode=@Html.Raw(Json.Encode(ViewBag.UserCode));
    var Company_Id=@Html.Raw(Json.Encode(ViewBag.Company_Id));
    $('#dvAjaxLoad').hide();


    $(document).ready(function () {
        debugger;
        Order.init();
        $('#date').hide();
        date = new Date();
        date = (date.getMonth() + 1) + '-' + date.getDate() + '-' + date.getFullYear();
        $("#dueDate").datepicker(
              {
                  dateFormat: 'dd-mm-yy',
              });
        $("#StartDate").datepicker({
            dateFormat: 'dd-mm-yy',
            changeMonth: true,
            changeYear: true,
        });
        $("#EndDate").datepicker({
            dateFormat: 'dd-mm-yy',
            changeMonth: true,
            changeYear: true,
        });
        var today = new Date();
        var cdd = today.getDate();
        var cmm = today.getMonth() + 1;
        var cyy = today.getFullYear();
        var currentDate =("0" + (cdd)).slice(-2) + '-' + ("0" + (cmm)).slice(-2) + '-' + cyy;
        today.setDate(today.getDate() - 90);
        var pdd = today.getDate();
        var pmm = today.getMonth() + 1;
        var pyy = today.getFullYear();
        var prevDate =("0" + (pdd)).slice(-2) + '-' + ("0" + (pmm)).slice(-2) + '-' +pyy ;
        $('#StartDate').val(prevDate);
        $('#EndDate').val(currentDate);
        $('#orderdetails').hide();
        $("input[name='age']").click(function(){
            if($('input:radio[name=age]:checked').val() == "Yes"){
                $('#date').show();

                //fngetPOBOrder();
            }
            else{
                $('#date').hide();
            }
        });
        $('input[type=radio][name=entity]').change(function() {
            Order.GetCustomer($("#region_hidden").val());
        });
    });

</script>