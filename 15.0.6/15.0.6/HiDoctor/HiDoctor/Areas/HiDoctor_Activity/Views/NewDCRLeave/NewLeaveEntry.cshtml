@{
    ViewBag.Title = "NewLeaveEntry";
    Layout = "~/Views/Shared/_ResponsiveMobileLayout.cshtml";
}
<div class="mt-3">
    <div class="card">
        <div class="card-header card-header-primary" style="background-color: khaki;">
            Leave Entry
        </div>
        <div class="card-body py-1 mx-1">
            <div class="d-flex flex-wrap mt-2">
                <div class="p-2 flex-fill col-sm-1">
                    <label for="MasterSelectionDrpDwn" id="labelforSelectedMaster">User Name</label>
                </div>
                <div class="p-2 flex-fill col-sm-3" id="user">
                    <input type="text" id="ddluser" tabindex="1" />
                </div>
            </div>
            <div class="d-flex flex-wrap mt-2">
                <div class="p-2 flex-fill col-sm-1">
                    <label for="MasterSelectionDrpDwn" id="labelforSelectedMaster">From Date</label>
                </div>
                <div class="p-2 flex-fill col-sm-3" id="fromdate">
                    <input type="date" id="frmdate" tabindex="1" />
                </div>
                <div class="p-2 flex-fill col-sm-1">
                    <label for="MasterSelectionDrpDwn" id="labelforSelectedMaster">To Date</label>
                </div>
                <div class="p-2 flex-fill col-sm-3" id="todate">
                    <input type="date" id="tdate" tabindex="1" />
                </div>
            </div>
            <div class="d-flex flex-wrap mt-2">
                <div class="p-2 flex-fill col-sm-1">
                    <label for="MasterSelectionDrpDwn" id="labelforSelectedMaster">Leave Type</label>
                </div>
                <div class="p-2 flex-fill col-sm-3" id="leavetype">
                    <input type="text" id="ddlleavetype" tabindex="1" />
                </div>
            </div>
            <div class="d-flex flex-wrap mt-2">
                <div class="p-2 flex-fill col-sm-1">
                    <label for="MasterSelectionDrpDwn" id="labelforSelectedMaster">Upload Document</label>
                </div>
                <div class="p-2 flex-fill col-sm-3" id="udoc">
                    <input type="file" id="leave_doc_upload" tabindex="1" multiple/>
                </div>
            </div>
            <div class="d-flex flex-wrap mt-2">
                <div class="p-2 flex-fill col-sm-1">
                    <label for="MasterSelectionDrpDwn" id="labelforSelectedMaster">Reason</label>
                </div>
                <div class="p-2 flex-fill col-sm-3" id="reason">
                    <textarea id="remarks" tabindex="1" cols="35" rows="4" style="resize:none;" class="form-control"></textarea>
                </div>
            </div>
           
            <div class="p-2 flex-fill col-sm-12" id="btn">
                <button type="button" class="btn btn-primary" id="Submit" onclick="NewLeaveEntry.fnsubmit();">Submit</button>
                <button type="button" class="btn btn-primary" id="Reset" onclick="NewLeaveEntry.fnreset();">Reset</button>
            </div>
            <div id="leaveBalanceTable">
            </div>
        </div>
    </div>
</div>
<script src="~/Areas/HiDoctor_Activity/Scripts/CoreREST.js?v=@HiDoctor.BuildNo.Build_No"></script>
<script src="~/Areas/HiDoctor_Activity/Scripts/RPACoreREST.js?v=@HiDoctor.BuildNo.Build_No"></script>
<script src="~/Areas/HiDoctor_Activity/Scripts/HD/NewLeaveEntry/NewLeaveEntry.js"></script>
<script>
    var CompanyCode = "";
    var RegionCode = "";
    var UserCode = "";
    var UserTypeCode="";
    var leaveprivilege_g="";
    var UserName="";
    $(document).ready(function () {
        debugger;
        //AjaxGlobalHandler.Initiate();
        $('#dvAjaxLoad').hide();
        CompanyCode = @Html.Raw(Json.Encode(ViewBag.CompanyCode));
        RegionCode = @Html.Raw(Json.Encode(ViewBag.RegionCode));
        UserCode = @Html.Raw(Json.Encode(ViewBag.UserCode));
        UserTypeCode=@Html.Raw(Json.Encode(ViewBag.UserTypeCode));
        NewLeaveEntry.defaults.companyCode=CompanyCode;
        NewLeaveEntry.defaults.regionCode=RegionCode;
        NewLeaveEntry.defaults.userCode=UserCode;
        NewLeaveEntry.defaults.userTypeCode=UserTypeCode;
        NewLeaveEntry.defaults.username=UserName;
        NewLeaveEntry.Init();
    });
</script>