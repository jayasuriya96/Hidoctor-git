@{
    ViewBag.Title = "PatientCreationMaster";
    Layout = null;
}
<link href="~/Areas/HiDoctor_Master/Content/PatientTrackingSystem.css" rel="stylesheet" />
<link href="~/Content/Bootstrap/bootstrap.css" rel="stylesheet" />
<link href="~/Content/simplePagination.css?v=@HiDoctor.BuildNumber.BuildNo" rel="stylesheet" />
<script src="~/Scripts/jquery.simplePagination.js?v=@HiDoctor.BuildNumber.BuildNo"></script>

<div></div>
<div id="dvTab" class="form-group ui-tabs ui-widget ui-widget-content ui-corner-all">
    <ul class="nav nav-pills ui-tabs-nav ui-helper-reset ui-helper-clearfix ui-widget-header ui-corner-all">
        <li class="ui-state-default ui-corner-top create" id="patmaster">
            <a href="#PatientMaster" data-toggle="tab"><b>Patient Creation</b></a>
        </li>
        <li class="ui-state-default ui-corner-top edit" id="patmasteredit">
            <a href="#PatientMasterEdit" data-toggle="tab"><b>Edit Patient</b></a>
        </li>
    </ul>



    <div class="tab-content">
        <div class="tab-pane active" id="PatientMaster">
            <div id="patientcreatmain">
                <div class="dvSubHeader">
                    <b>Basic Information</b>
                </div>
                <div class="row pc">


                    <div class="col-xs-12 col-sm-12 form-group" style="margin-left: 20px;">

                        <div class="form-group col-xs-12 col-sm-6">
                            <div class="col-xs-5">
                                <label for="Title"><b>Title</b></label>
                                <label class="Mandatory">*</label>
                            </div>
                            <div class="col-xs-1">
                                <label>:</label>
                            </div>
                            <div class="col-xs-5">
                                <select class="form-control" maxlength="25" id="title">
                                    <option maxlength="25" value="0">Title</option>
                                    <option maxlength="25" value="1">Mr.</option>
                                    <option maxlength="25" value="2">Ms.</option>
                                    <option maxlength="25" value="3">Mrs.</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group col-xs-12 col-sm-6">
                            <div class="col-xs-5">
                                <label for="name"><b> Patient Name</b></label>
                                <label class="Mandatory">*</label>
                            </div>
                            <div class="col-xs-1">
                                <label>:</label>
                            </div>
                            <div class="col-xs-5">
                                <input type="text" class="form-control" id="patientname" maxlength="50">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row pc">
                    <div class="col-xs-12 col-sm-12 form-group" style="margin-left: 20px;">

                        <div class="form-group col-xs-12 col-sm-6">
                            <div class="col-xs-5">
                                <label for="gender"><b>Gender</b></label>
                                <label class="Mandatory">*</label>
                            </div>
                            <div class="col-xs-1">
                                <label>:</label>
                            </div>
                            <div class="col-xs-5">
                                <select class="form-control" maxlength="25" id="Gender">
                                    <option maxlength="25" value="0">Gender</option>
                                    <option maxlength="25" value="1">Male</option>
                                    <option maxlength="25" value="2">Female</option>
                                    <option maxlength="25" value="3">Others</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group col-xs-12 col-sm-6">
                            <div class="col-xs-5">
                                <label for="age"><b>Age</b></label>
                                <label class="Mandatory">*</label>
                            </div>
                            <div class="col-xs-1">
                                <label>:</label>
                            </div>
                            <div class="col-xs-5">
                                <input type="text" class="form-control" id="Age" maxlength="5">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row pc">
                    <div class="col-xs-12 col-sm-12 form-group" style="margin-left: 20px;">

                        <div class="form-group col-xs-12 col-sm-6">
                            <div class="col-xs-5">
                                <label for="MobileNumber"><b>Mobile Number</b></label>
                                <label class="Mandatory">*</label>
                            </div>
                            <div class="col-xs-1">
                                <label>:</label>
                            </div>
                            <div class="col-xs-5">
                                <input type="text" class="form-control" id="mobilenumber" maxlength="10">
                            </div>
                        </div>

                        <div class="form-group col-xs-12 col-sm-6">
                            <div class="col-xs-5">
                                <label for="region"><b>Region</b></label>
                                <label class="Mandatory">*</label>
                            </div>
                            <div class="col-xs-1">
                                <label>:</label>
                            </div>
                            <div class="col-xs-5">
                                <input type="text" class="regions_list form-control" id="region" maxlength="30" onblur="PatientCreationMaster.fnValidateRegion(this);">
                                <input type="hidden" id="hdnregionCode" value="0" />
                            </div>
                        </div>

                    </div>
                </div>

                <div class="row pc">
                    <div class="col-xs-12 col-sm-12 form-group" style="margin-left: 20px;">
                        <div class="form-group col-xs-12 col-sm-6">
                            <div class="col-xs-5">
                                <label for="AltMobileNumber"><b>Alternate Mobile Number</b></label>
                            </div>
                            <div class="col-xs-1">
                                <label>:</label>
                            </div>
                            <div class="col-xs-5">
                                <input type="text" class="form-control" id="altmobilenumber" maxlength="10">
                            </div>
                        </div>
                        <div class="form-group col-xs-12 col-sm-6">
                            <div class="col-xs-5">
                                <label for="Address"><b>Address</b></label>
                            </div>
                            <div class="col-xs-1">
                                <label>:</label>
                            </div>
                            <div class="col-xs-5">
                                <input type="text" class="form-control" id="address" maxlength="100">
                            </div>
                        </div>

                    </div>
                </div>

                <div class="row pc">
                    <div class="col-xs-12 col-sm-12 form-group" style="margin-left: 20px;">
                        <div class="form-group col-xs-12 col-sm-6">
                            <div class="col-xs-5">
                                <label for="City"><b>City</b></label>
                                <label class="Mandatory">*</label>
                            </div>
                            <div class="col-xs-1">
                                <label>:</label>
                            </div>
                            <div class="col-xs-5">
                                <input type="text" id="city" class="cities_list form-control" onblur="PatientCreationMaster.fnGetPincodes();PatientCreationMaster.fnValidateCity(this);" maxlength="50">
                                <input type="hidden" id="city_Id" value="0" />
                            </div>
                        </div>
                        <div class="form-group col-xs-12 col-sm-6">
                            <div class="col-xs-5">
                                <label for="Pincode"><b>Pincode</b></label>
                                <label class="Mandatory">*</label>
                            </div>
                            <div class="col-xs-1">
                                <label>:</label>
                            </div>
                            <div class="col-xs-5">
                                <input type="text" id="pincode" class="pincodes_list form-control" disabled="disabled" maxlength="10" onblur="PatientCreationMaster.fnValidatePincode(this);" />
                                <input type="hidden" id="pincode_Id" value="0" />
                            </div>
                        </div>

                    </div>
                </div>

                <div class="row pc">
                    <div class="col-xs-12 col-sm-12 form-group" style="margin-left: 20px;">


                        <div class="form-group col-xs-12 col-sm-6">
                            <div class="col-xs-5">
                                <label for="Email"><b>Email</b></label>
                            </div>
                            <div class="col-xs-1">
                                <label>:</label>
                            </div>
                            <div class="col-xs-5">
                                <input type="text" class="form-control" id="email" maxlength="50">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="dvSubHeader">
                    <b>Addtional Information</b>
                </div>
                <div class="row pc">
                    <div class="col-xs-12 col-sm-12 form-group" style="margin-left: 20px;">

                        <div class="form-group col-xs-12 col-sm-6">
                            <div class="col-xs-5">
                                <label for="cirrhotic"><b>Cirrhotic</b></label>
                                <label class="Mandatory">*</label>
                            </div>
                            <div class="col-xs-1 clearfix">
                                <label>:</label>
                            </div>
                            <div class="col-xs-2">
                                <input type="radio" name="cirrhotic" value="1" class="YES" /><span class="yes">YES</span>
                            </div>
                            <div class="col-xs-2">
                                <input type="radio" name="cirrhotic" value="0" checked="checked" class="NO" /><span class="no">NO</span>
                            </div>
                        </div>

                        <div class="form-group col-xs-12 col-sm-6">
                            <div class="col-xs-5">
                                <label for="noncirrhotic"><b>Non-Cirrhotic</b></label>
                                <label class="Mandatory">*</label>
                            </div>
                            <div class="col-xs-1 clearfix">
                                <label>:</label>
                            </div>
                            <div class="col-xs-2">
                                <input type="radio" name="noncirrhotic" value="1" class="YES" /><span class="yes">YES</span>
                            </div>
                            <div class="col-xs-2">
                                <input type="radio" name="noncirrhotic" value="0" checked="checked" class="NO" /><span class="no">NO</span>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="row pc">
                    <div class="col-xs-12 col-sm-12 form-group" style="margin-left: 20px;">

                        <div class="form-group col-xs-12 col-sm-6">
                            <div class="col-xs-5">
                                <label for="noncirrhotic"><b>Decompensated Cirrhotic</b></label>
                                <label class="Mandatory">*</label>
                            </div>
                            <div class="col-xs-1 clearfix">
                                <label>:</label>
                            </div>
                            <div class="col-xs-2">
                                <input type="radio" name="deccirrhotic" value="1" class="YES" /><span class="yes">YES</span>
                            </div>
                            <div class="col-xs-2">
                                <input type="radio" name="deccirrhotic" value="0" checked="checked" class="NO" /><span class="no">NO</span>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="row pc">
                    <div class="col-xs-12 form-group">
                        <div class="col-xs-6" id="mandtry">
                            <label class="Mandatory">
                                * Mandatory Field(s)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row pc">
                    <div class="col-xs-12 col-sm-12">
                        <div class="col-xs-6 form-group" id="buttons">
                            <input type="button" id="submit" value="Submit" class="btn" onclick="PatientCreationMaster.fnSumbit();" />
                            <input type="button" id="update" value="Update" class="btn" onclick="PatientCreationMaster.fnUpdate();" />
                            <input type="button" id="clear" value="Clear" class="btn" onclick="PatientCreationMaster.fnClear();" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane active" id="PatientMasterEdit">
            <div id="editpatdet">
                <div class="row pc">
                    <div class="col-xs-12 col-sm-12">
                        <div class="col-sm-4" id="Release_Pagination" style="float:right !important;">
                        </div>
                        <div id="EditPatDet">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>





