@{
    ViewBag.Title = "RegionType";
    Layout = null;
}

<style>
    .lblText {
        width: 60%;
    }

    .e-grid .e-groupdroparea {
        background-color: #0072c6 !important;
        color: white !important;
    }

    .e-headercelldiv {
        font-size: 14px !important;
        color: black !important;
        margin-top: 3px !important;
    }
</style>

<div id="container">
    <div class="col-xs-12 clearfix" style="margin-top: 18px;">
        <div class="col-xs-3">
            <label class="lblText">Region Type Name</label>
        </div>
        <div class="col-xs-3">
            <input type="text" class="form-control" maxlength=30 style="width: 20%" id="txtRegionTypename" onblur="fncheckregiontype()" />
            <input type="hidden" id="regtypecode" />
        </div>
    </div>
    <div class="col-xs-12 clearfix" style="margin-top:12px;">
        <div class="col-xs-3">
            <label class="lblText">Reporting Region Type Name</label>
        </div>
        <div class="col-xs-3">
            <select class="form-control" id="ddlUnderRegion" style="width: 20%"></select>
        </div>
    </div>
   
    <div class="col-xs-12 clearfix" style="margin-top:12px;">
        <div class="col-xs-3">
            <label class="lblText">Region Type Category</label>
        </div>
        <div class="col-xs-3">
            <form>
                <label class="radio-inline">
                    <input type="radio" name="optradio" value="FIELD_REGION" checked>Field Region 
                </label>
                <label class="radio-inline">
                    <input type="radio" name="optradio" value="NON_FIELD_REGION">Non Field Region
                </label>
            </form>
        </div>
    </div>
    <div class="col-xs-12 clearfix" style="margin-top:12px;">
        <div class="col-xs-3">
            <label class="lblText">Region Type Ref Key 1</label>
        </div>
        <div class="col-xs-3">
            <input type="text" class="form-control" maxlength=50 id="ddlRefkey1" style="width: 20%" />
        </div>
    </div>
    <div class="col-xs-12 clearfix" style="margin-top:12px;">
        <div class="col-xs-3">
            <label class="lblText">Region Type Ref Key 2</label>
        </div>
        <div class="col-xs-3">
            <input type="text" class="form-control" maxlength=50 id="ddlRefkey2" style="width: 20%" />
        </div>
    </div>
    <div class="col-xs-12 clearfix" style="margin-top: 12px;">
        <div class="col-xs-3"></div>
        <div class="col-xs-3" style="text-align:center;">
            <button id="btnSave" type="button" class="btn btn-success" onclick="fnSave()">Save</button>
            <button id="btnUpdate" style="display: none" type="button" class="btn btn-success" onclick="fnUpdate()">Update</button>
            <button id="btnCancel" type="button" class="btn btn-primary" onclick="fnCancel()">Cancel</button>
        </div>
    </div>
    <div id="regiontypedivhidden" style="display:none;"></div>
    <lable id="lblmessage" style="font-size: 15px; margin-left: 37%; color: red; text-align: center"></lable>

    <div style="clear: both"></div>
    @*<div style="margin-left: 1%">
            @Html.ActionLink("Download Region Type Master details", "PutRegionTypeMasterIntoExcel", new { })
        </div>*@
    <div style="clear: both"></div>
    <div id="divRegionType" class="col-lg-12"></div>
    <div style="clear: both"></div>
</div>

<script type="text/javascript" src="../../Areas/HiDoctor/Scripts/HD/common.js?v=@HiDoctor.BuildNumber.BuildNo"></script>
<script src="../../Areas/HiDoctor_Master/Scripts/HD_Master/RegionType.js?v=@HiDoctor.BuildNumber.BuildNo"></script>
<link href="~/Content/Bootstrap/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/Bootstrap/bootstrap.js"></script>
<script src="../Scripts/HD/KangleIntegration.js?v=@HiDoctor.BuildNumber.BuildNo"></script>

<script type="text/javascript">
    var CompanyCode = "";
    $(document).ready(function () {
        CompanyCode = @Html.Raw(Json.Encode(ViewBag.CompanyCode));
        AjaxGlobalHandler.Initiate();
        try {
            $("#dvAjaxLoad").hide();
            fnUnderRegion();
            fnfillRegionTypeGrid();
            $("#divPageHeader").html('Region Type Master');
        }
        catch (err) {
            $("#dvAjaxLoad").hide();
        }
    }); </script>
