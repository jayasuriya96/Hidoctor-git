            css: { border: '2px solid #ddd' }
        });
        $.ajax({
            url: '../HiDoctor_Master/Approval/GetCustomerHistory/',
            type: "POST",
            data: "customerCode=" + customerCode + "&regionCode=" + regionCode + "&entity=" + entity + "",
