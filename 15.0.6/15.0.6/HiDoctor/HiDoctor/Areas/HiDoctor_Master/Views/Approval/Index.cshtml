                if (!chk) {
                    $("#dvAjaxLoad").hide();
                    $("#dvDocCountPopUp").overlay().load();
                }
                else{
                    debugger;
                    $("#dvAjaxLoad").hide();
                    fnDoctorSpecialityCountCompare(tblContent,entity,regionCode);
