@model MVCModels.HiDoctor_Master.DoctorModel

@{
    Layout = null;
}

<link href="~/Content/Bootstrap/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/Bootstrap/bootstrap.js" type="text/javascript"></script>
<style>
    .selectboxWidth {
        width: 99%;
    }
</style>

<div id="dvRules" class="col-lg-12 table-responsive">
    <table>
        <tr>
            <td>
                <label class="control-label">Doctor Category Name:</label>
            </td>
            <td style="margin-top: 10px">
                <input type="hidden" name="doccategory" id="hdndoccategoryval" />
                <input type="text" id="txtcategoryname" class="input-large" />
            </td>
        </tr>
        <tr>
            <td>
                <label class="control-label">Visit Count:</label>
            </td>
            <td style="margin-top: 10px">
                <input type="text" id="txtvisitcount" class="input-large" />
            </td>
        </tr>
        <tr>
            <td>
                <label class="control-label">Doctor Count:</label>
            </td>
            <td style="margin-top: 10px">
                <input type="text" id="txtdoctcount" class="input-large" />
            </td>
        </tr>
        <tr>
            <td>
                <label class="control-label">Division Name:</label>
            </td>
            <td style="margin-top: 10px">
                <input type="hidden" name="divisionCode" id="hdnDivisionCode" />
                <select class="selectboxWidth input-large" id="ddlDivision" />
            </td>
        </tr>
        <tr>
            <td>
                <label class="control-label">Effective From Date:</label>
            </td>
            <td style="margin-top: 10px">
                <input type="text" id="txtFromDate" class='datepicker input-large' />
            </td>
        </tr>
        <tr>
            <td>
                <label class="control-label">Effective To Date:</label>
            </td>
            <td style="margin-top: 10px">
                <input type="text" id="txtToDate" class='datepicker input-large' />
            </td>
        </tr>
        <tr></tr>
        <tr>
            <td style="margin-top: 10px">
                <input type="button" name="Save" value="Save" id="btnsave" onclick="fnSubmit()" class="btn btn-primary" />
                <input type="hidden" name="Update" value="I" id="hdnMode" />
            </td>
            <td style="margin-top: 10px">
                <input type="button" name="Cancel" value="Cancel" id="btncancel" onclick="fnClearAll()" class="btn btn-primary" />
            </td>
        </tr>
    </table>
    <br />
    @Html.ActionLink("Download DoctorCategory Master details", "PutDoctorcategoryIntoExcel",new {})
    <br />
    <div id="divdoccategory"></div>
</div>


<script type="text/javascript" src="../../Areas/HiDoctor/Scripts/HD/common.js?v=@HiDoctor.BuildNumber.BuildNo"></script>
<script src="../../Areas/HiDoctor_Master/Scripts/HD_Master/DoctorCategoryMaster.js?v=@HiDoctor.BuildNumber.BuildNo" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        AjaxGlobalHandler.Initiate();
        fnGetDivision();
        fnGetDoctorCategoryDetails();
        $("#dvAjaxLoad").hide();
        $(".datepicker").datepicker({
            dateFormat: 'dd/mm/yy',
            //showButtonPanel: true
        });
        $("#divPageHeader").html('Doctor Category Master');
    });
</script>
