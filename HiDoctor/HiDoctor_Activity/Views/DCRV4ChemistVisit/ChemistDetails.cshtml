    $(document).ready(function () {
        try {
            ChemistVisit.fngetChemistbusinesscategory();
            // autoComplete(chemistAutoFill_g, "txtChemistName", "hdnChemistCode", "auto_Chemist_Visit");
        }
        catch (ex) {
        }
    });
</script>
