@{
    ViewBag.Title = "PurchaseDispatch";
    Layout = null;
}

<link href="~/Content/Bootstrap/bootstrap.css" rel="stylesheet" />
<link href="~/Areas/HiDoctor_Master/Content/PurchaseRequisition.css" rel="stylesheet" />



<div></div>
<div id="dvTab" class="form-group ui-tabs ui-widget ui-widget-content ui-corner-all">
    <ul class="nav nav-pills ui-tabs-nav ui-helper-reset ui-helper-clearfix ui-widget-header ui-corner-all">
        <li class="ui-state-default ui-corner-top create" id="prmaster">
            <a href="#DispatchForm" data-toggle="tab"><b>Dispatch</b></a>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane active" id="RECDis">
            <div class="form-group">
             
                <div class="col-xs-12" id="RList">

                </div>
            </div>
            <div class="container" id="DvMainDis">
                <div class="form-group" id="dispatchform">

                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-xs-2">
                                <p><span style="font-weight:bold;">Receipt By</span></p>
                            </div>
                            <div class="col-xs-1"><p><span style="text-align:center;"><label>:</label></span></p></div>
                            <div class="col-xs-6">
                                <p><span id="RecpBy"></span></p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-xs-2">
                                <p><span style="font-weight:bold;">Receipt On</span></p>
                            </div>
                            <div class="col-xs-1"><p><span style="text-align:center;"><label>:</label></span></p></div>
                            <div class="col-xs-6">
                                <p><span id="RecpOn"></span></p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-xs-2">
                                <p><span style="font-weight:bold;">Total Quantity</span></p>
                            </div>
                            <div class="col-xs-1"><p><span style="text-align:center;"><label>:</label></span></p></div>
                            <div class="col-xs-6">
                                <p><span id="Qtity"></span></p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-xs-2">
                                <p><span style="font-weight:bold;">Dispatched Quantity</span></p>
                            </div>
                            <div class="col-xs-1"><p><span style="text-align:center;"><label>:</label></span></p></div>
                            <div class="col-xs-6">
                                <p><span id="DisQtity"></span></p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="col-xs-2">
                                <p><span style="font-weight:bold;">Balance Quantity</span></p>
                            </div>
                            <div class="col-xs-1"><p><span style="text-align:center;"><label>:</label></span></p></div>
                            <div class="col-xs-6">
                                <p><span id="BalQtity"></span></p>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" id="hdnQtity" value="0" />
                    <div id="dvdispatch" class="form-group">
                        
                        <table class="table table-responsive" id="tbldispmain">
                            <thead style="text-align:center;">
                                <tr>
                                    <th width="20%;">Region</th>
                                    <th width="10%;">User</th>
                                    <th width="10%;">Quantity</th>
                                    <th>Remarks</th>
                                    <th width="10%;">Challan Number</th>
                                    <th width="15%;">Dispatched On</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="tbldisbody" style="text-align:center;"></tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 form-group" style="margin-left: 20px;">
                            <div class="col-xs-6"></div>
                            <div class="col-xs-6" style="padding-right:5% !important;">
                                <div class="col-xs-2" style="float:right;">
                                    <input type="button" id="btnsubmit" class="btn form-group" value="Submit" onclick="Dispatch.fnSaveDispatchDetailsForm();" />
                                </div>
                                <div class="col-xs-2" style="float:right;">
                                    <input type="button" id="btncancel" class="btn form-group" value="Cancel" onclick="Dispatch.fnCancel();" />
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


<div id="UserList" class="modal fade " role="dialog" style="display:none;overflow:hidden;">
    <div class="modal-dialog modal-lg" style="-webkit-box-shadow:none;background:none;border:0px;margin:0px;margin-left:30%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Please Select Any User for Dispatch</h4>
            </div>
            <div class="modal-body" id="UserListBody" style="width:100%;height:500px;overflow: auto;">
            </div>
            <div class="modal-footer" style="padding: 5px 20px 20px;margin-top: 0px;">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Areas/HiDoctor_Master/Scripts/HD_Master/PurchaseDispatch.js"></script>
<script>
    var userCode = '';
    $(document).ready(function () {
        $('#dvAjaxLoad').hide();
        userCode= @Html.Raw(Json.Encode(ViewBag.User_Code));
        $('#dvTab').tabs();
    });

    Dispatch.Init(userCode);
</script>
