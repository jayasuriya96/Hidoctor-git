<script>
        $(document).ready(function () {
            AjaxGlobalHandler.Initiate();
            try {
                $(document).ajaxStop($.unblockUI);
                $("#dvTabs").tabs();
                $(".datepicker").datepicker({
                    dateFormat: 'dd/mm/yy',
                    //showButtonPanel: true
                });
                fnGetMyProfile();
                $("#divPageHeader").html('My Profile');
                $("#dvAjaxLoad").hide();
            }
            catch (err) {
                $("#dvAjaxLoad").hide();
            }

            $('#myModal').modal('show');

        });
</script>


