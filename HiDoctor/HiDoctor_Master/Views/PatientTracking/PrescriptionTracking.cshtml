@{
    ViewBag.Title = "PrescriptionTracking";
    Layout = null;
}
<link href="~/Areas/HiDoctor_Master/Content/PatientTrackingSystem.css" rel="stylesheet" />
<link href="~/Content/Bootstrap/bootstrap.css" rel="stylesheet" />
<div id="dvTab" class="form-group ui-tabs ui-widget ui-widget-content ui-corner-all">
    <ul class="nav nav-pills ui-tabs-nav ui-helper-reset ui-helper-clearfix ui-widget-header ui-corner-all">
        <li class="ui-state-default ui-corner-top ui-tabs-selected ui-state-active presctab" id="PrescriptionTab">
            <a href="#PrescriptionTracking" data-toggle="tab"><b>Prescription Tracking</b></a>
        </li>
    </ul>


    <div class="tab-content">
        <div class="tab-pane" id="PatientMaster" style="display:block !important;">
            <div id="PrescptrackingMain">
                <div id="patientinptfltr">
                    <div class="row">

                        <div class="col-xs-12 col-sm-12 form-group">
                            <div class="col-xs-4">
                                <label for="selection" id="selttitle">
                                    Enter Name / Mobile Number
                                </label>
                                <label id="colon">:</label>
                                <label class="Mandatory">*</label>
                            </div>
                            <div class="col-xs-4 form-group">
                                <input type="text" class="patient_list" id="patientslist">
                                <input type="hidden" id="patient_det" value="0" />
                                <input type="button" class="btn" value="Go" id="getPrescp" onclick="PrescriptionTracking.fnGetPatientDetails();" />
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="PatientDetails" id="patientdet">
                <div id="patdet">

                    <div class="row pt">
                        <div class="col-xs-12 col-sm-12 form-group">

                            <div class="form-group col-xs-12 col-sm-6">
                                <div class="col-xs-4">
                                    <p><b><span>Patient Name</span></b></p>
                                </div>
                                <div class="col-xs-1">
                                    <span>:</span>
                                </div>
                                <div class="col-xs-4">
                                    <p><span id="patientname"></span></p>
                                </div>
                            </div>

                            <div class="form-group col-xs-12 col-sm-6">
                                <div class="col-xs-4">
                                    <p><b><span>Age</span></b></p>
                                </div>
                                <div class="col-xs-1">
                                    <span>:</span>
                                </div>
                                <div class="col-xs-4">
                                    <p><span id="age"></span></p>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row pt">
                        <div class="col-xs-12 col-sm-12 form-group">

                            <div class="form-group col-xs-12 col-sm-6">
                                <div class="col-xs-4">
                                    <p><b><span>Mobile Number</span></b></p>
                                </div>
                                <div class="col-xs-1">
                                    <span>:</span>
                                </div>
                                <div class="col-xs-4">
                                    <p><span id="mobnumber"></span></p>
                                </div>
                            </div>

                            <div class="form-group col-xs-12 col-sm-6">
                                <div class="col-xs-4">
                                    <p><b><span>Gender</span></b></p>
                                </div>
                                <div class="col-xs-1">
                                    <span>:</span>
                                </div>
                                <div class="col-xs-4">
                                    <p><span id="gender"></span></p>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>

            <div class="DoctorList" id="mappeddoc">
                <div id="mappedusers">
                    <div id="regionusers">

                        <div class="row doct">
                            <div class="col-xs-12 col-sm-12 form-group">
                                <div class="col-xs-6">
                                    <label><b>Region Hierarchy:</b></label><label class="Mandatory">*</label><br />
                                    <input type="text" id="reginpt" class="RegInpt" onblur="PrescriptionTracking.fnShowDoctors();" />
                                    <input type="hidden" id="hdnregCode" value="0" />
                                </div>
                                <div class="col-xs-6" id="doctorsinpt">
                                    <label><b>Doctors:</b></label><label class="Mandatory">*</label><br />
                                    <input type="text" id="docinpt" class="DocInpt" onblur="PrescriptionTracking.fnShowMedInputs();" />
                                    <input type="hidden" id="doc_code" value="0" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="medInpt" id="medcinpt">
                <div id="prescription">
                    <div id="Prescrip">
                        <div id="medhdr">
                            <p>Medicines Prescribed By  <b><span id="docname"></span></b></p>
                        </div>
                        <div id="medlstinpt">
                            <table class="table table-hover">
                                <thead id="medhead">
                                    <tr>
                                        <th style="width:14%;"><label>Portfolio</label><label class="Mandatory">*</label></th>
                                        <th style="width:14%;"><label>Input(s)</label></th>
                                        <th style="width:14%;"><label>Products</label><label class="Mandatory">*</label></th>
                                        <th style="width:14%;"><label>Quantity</label><label class="Mandatory">*</label></th>
                                        <th style="width:14%;"><label>Prescription Date</label><label class="Mandatory">*</label></th>
                                        <th style="width:14%;"><label>Date Of Consumption</label><label class="Mandatory">*</label></th>
                                        <th style="width:14%;"><label>Follow Up Date</label><label class="Mandatory">*</label></th>
                                        <th style="width:2%;"><label>Action</label></th>
                                    </tr>
                                </thead>
                                
                            </table>
                        </div>
                        <div id="inputsmeds">
                            <table class="table table-hover" id="tblMedicinesinpt">
                                <tbody id="medbody"></tbody>

                            </table>
                        </div>
                        <div id="submitbutton">
                            <input type="button" id="submitdet" value="Submit" class="btn" onclick="PrescriptionTracking.fnSubmit();" />
                            <input type="button" id="cleardet" value="Clear" class="btn" onclick="PrescriptionTracking.fnClear();" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="~/Areas/HiDoctor_Master/Scripts/HD_Master/PrescriptionTracking.js"></script>
<script src="~/Scripts/Bootstrap/bootstrap.js"></script>
<script>

    $(document).ready(function () {
        AjaxGlobalHandler.Initiate();
        //$('#mappeddoc').hide();
        //$('#medcinpt').hide();
        //$('#patientdet').hide();

        $('#dvAjaxLoad').hide();

        $(".presctab").removeClass("active");
    });
    PrescriptionTracking.Init();

    $('#basket').keypress(function (event) {
        if (event.keyCode == 9 || event.keyCode == 13) {
            PrescriptionTracking.fnBindProducts();
        }
    });

    $('#basket').keyup(function (event) {
        if (event.keyCode == 9) {
            PrescriptionTracking.fnBindProducts();
        }
    });

    $('table').on('scroll', function () {
        $("table > *").height($("table").height() + $("table").scrollup());
    });
</script>
