<script type="text/javascript">
    $(document).ready(function () {
        AjaxGlobalHandler.Initiate();
        $("#dvTabs").tabs();
        $("#txtEffectiveFrom").datepicker({
            dateFormat: 'dd/mm/yy', changeMonth: true, changeYear: true, onSelect: function (dateText, inst) {
                fnFillEffectiveFrom(inst);
            }
        });
        $("#txtEffectiveTo").datepicker({
            dateFormat: 'dd/mm/yy', changeMonth: true, changeYear: true, onSelect: function (dateText, inst) {
                fnFillEffectiveTo(inst);
            }
        });
        $("#dvSchemeView").overlay().load();
        $("#dvMapping").load("../HiDoctor_Master/Scheme/RegionSchemeMapping");
        //fnCreateSchemeTable();
        fnGetSalesProducts();
        $("#dvAjaxLoad").hide();
    });
</script>
