<div style="width: 100%">
    <div style="width: 100%;" id="dvTabs">
        <ul>
            <li><a href="#dvInsert">Add Scheme</a></li>
            <li><a href="#dvEdit">View/Edit Scheme</a></li>
            <li><a href="#dvMapping">Region Scheme Mapping</a></li>
        </ul>
        <div style="width: 100%;" id="dvInsert">
            <div style="width: 100%;">
                <table cellspacing="5" cellpadding="5" style="width: 100%;">
                    <tr>
                        <td style="width: 12%;">Scheme Name
                        </td>
                        <td>
                            <input type="text" id="txtSchemeName" maxlength="255" style="width: 30%;" onblur="fnValidateSchemeName();" />
                            <input type="hidden" id="hdnSchemeCode" />
                        </td>
                    </tr>
                    <tr style="display: none;">
                        <td>Scheme Base
                        </td>
                        <td>
                            <input type="radio" id="rdQuantity" value="Quantity" name="rdSchemeBase" checked="checked" disabled="disabled" />
                            Quantity
                <input type="radio" name="rdSchemeBase" value="Value" id="rdValue" disabled="disabled" />
                            Value </td>
                    </tr>
                    <tr>
                        <td>Effective From
                        </td>
                        <td>
                            <input type="text" id="txtEffectiveFrom" style="width: 30%;" />
                        </td>
                    </tr>
                    <tr>
                        <td>Effective To
                        </td>
                        <td>
                            <input type="text" id="txtEffectiveTo" style="width: 30%;" />
                        </td>
                    </tr>
                </table>
            </div>
            <div style="width: 100%;">
                <div style="width: 60%;" id="dvScheme">
                </div>
            </div>
            <div style="width: 100%; padding-top: 5px; clear: both;" id="dvSave">
                <input type="button" id="btnSave" value="Save" class="btn small primary" onclick="fnSubmit();" />
                <input type="button" id="btnReset" value="Reset" class="btn small primary" onclick="fnClearAll();" />
                <input type="hidden" id="hdnMode" value="INSERT" />
            </div>
        </div>
        <div id="dvEdit">
            <div id="dvSchemeHeader" style="width: 100%;">
            </div>
        </div>
        <div id="dvMapping" style="width: 100%;"></div>
    </div>
</div>
<div id="dvSchemeView" class="simple_overlay" style="width: 40% !important; min-height: 450px !important; height: 450px !important; -webkit-box-shadow: 0 0 21px black !important;">
    <div class="">
        <div class="popUpTitle" style="height: 45px;">
            <span>Scheme Details</span> <a class="popUpTitle-close" style="background: url(../Content/images/cross.png) no-repeat !important;" onclick="fnClosePopUp('dvSchemeView');"></a>
        </div>
        <br />
        <div style="width: 100%; height: 325px; overflow: auto;">
            <div style="width: 100%;" id="dvAllScheme">
            </div>
        </div>
    </div>
</div>
