@model HiDoctor_Master.Models.UserTypeMasterModel

@{
    Layout = null;
}
<script>
   $("link[href='/Content/hidoctor/hidoctor.css']").remove();
</script>
<link href="~/Content/Bootstrap/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/Bootstrap/bootstrap.js" type="text/javascript"></script>

<style>
    .selectboxWidth {
        width: 99%;
    }
     .e-grid .e-groupdroparea {
        background-color: #0072c6 !important;
        color: white !important;
    }

    .e-headercelldiv {
        font-size: 14px !important;
        color: black !important;
        margin-top: 3px !important;
    }
</style>

<div id="dvRules" class="col-lg-12 table-responsive" style="margin-top:2%;">

    <div class="col-xs-12 clearfix" style="margin-top: 18px;">
        <div class="col-xs-3">
            <label class="control-label">User Type Name</label>
        </div>
        <div class="col-xs-3">
            <input type="hidden" name="UserTypeCode" id="hdnUserTypecodeval" />
            <input type="text" id="txtUserType" class="input-large form-control" maxlength="30" onblur="fncheckutname();"/>
        </div>
    </div>
    <div class="col-xs-12 clearfix" style="margin-top: 12px;">
        <div class="col-xs-3">
            <label class="control-label">Reporting User Type</label>
        </div>
        <div class="col-xs-3">
            <input type="hidden" name="UnderUserType" id="hdnUnderUserTypeval" />
            <select class="selectboxWidth input-large form-control" id="ddlDivision" />
        </div>
    </div>
    <div class="col-xs-12 clearfix" style="margin-top: 12px;">
        <div class="col-xs-3">
            <label class="control-label">User Type Category</label>
        </div>
        <div class="col-xs-3">
            <input type="radio" name="rdnFieldUser" value="FIELD_USER" checked="checked" />Field User
            <input type="radio" name="rdnFieldUser" value="NON_FIELD_USER" />Non Field User
        </div>
    </div>
    <div class="col-xs-12 clearfix" style="margin-top: 12px;">
        <div class="col-xs-3">
            <label class="control-label">User Type Ref Key1</label>
        </div>
        <div class="col-xs-3">
            <input type="text" id="txtUTRefKey1" class="input-large form-control" maxlength="50"/>
        </div>
    </div>
    <div class="col-xs-12 clearfix" style="margin-top: 12px;">
        <div class="col-xs-3">
            <label class="control-label">User Type Ref Key2</label>
        </div>
        <div class="col-xs-3">
            <input type="text" id="txtUTRefKey2" class="input-large form-control" maxlength="50"/>
        </div>
    </div>
    <div class="col-xs-12 clearfix" style="margin-top: 12px;margin-bottom:2%;">
        <div class="col-xs-3"></div>
        <div class="col-xs-3" style="text-align:center;">
            <input type="button" name="Save" value="Save" id="btnsave" class="btn btn-success" onclick="fnsave();"/>
            <input type="hidden" name="Update" value="I" id="hdnMode" />
            <input type="button" name="Cancel" value="Cancel" id="btncancel" class="btn btn-primary" />
        </div>
    </div>
    @*<br />
    @Html.ActionLink("Download UserType Master details", "PutUserTypeIntoExcel", new { })
    <br />*@
    <div id="divUserType"></div>
    <div id="divUserTypeHidden" style="display:none;"></div>
</div>

<script src="../../Areas/HiDoctor_Master/Scripts/HD_Master/UserType.js?v=@HiDoctor.BuildNumber.BuildNo" type="text/javascript"></script>
<script src="../Scripts/HD/KangleIntegration.js?v=@HiDoctor.BuildNumber.BuildNo"></script>
<script type="text/javascript">
    var CompanyCode = "";
    $(document).ready(function () {
        CompanyCode = @Html.Raw(Json.Encode(ViewBag.CompanyCode));
        AjaxGlobalHandler.Initiate();
        fnGetUnderUserType();
        fnGetUserType();
        $("#dvAjaxLoad").hide();
        $("#divPageHeader").html('User Type Master');
    });
</script>


